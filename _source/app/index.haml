!!!
%html{ "lang" => "en", "ng-app" => ""}
%head
  %meta{ "charset" => "UTF-8"}
  %meta{ "http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
  %meta{ "name" => "viewport", "content" => "width=device-width, initial-scale=1.0" }
  %title tiktak

  / inject:css
  / endinject
%body
  .container-fluid
    .row
      %h1
        tiktak
        %small tktk
      %p tiktak is tiktak.
    .row-fluid
      .col-md-4
        %label Name:
        %input{ "type" => "text", "ng-model" => "yourname", "placeholder" => "Enter a name here" }
        %p Hello {{ yourname }}
      .col-md-4
        %p tak
      .col-md-4
        %p pop

  / inject:js
  / endinject
